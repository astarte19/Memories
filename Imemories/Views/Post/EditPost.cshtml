@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Imemories.Models.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todos - Edit</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/post/create.css" asp-append-version="true" />

</head>
<body>


<div class="container">
    <div class="container-close"><a asp-controller="Home" asp-action="Index" class="close_create">&times;</a></div>
    <img
      src="https://images.unsplash.com/photo-1534670007418-fbb7f6cf32c3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"
      alt="image">
    <div class="container-text">
      <h2>Изменение записи</h2>
        <form asp-controller="Post" asp-action="EditPost" enctype="multipart/form-data">
             <input type="hidden" asp-for="Id" />
            <input asp-for="Title" type="text" required placeholder="Заголовок" required>
            <input name="Photo" type="file" required>
            <input asp-for="Text" type="text" placeholder="Текст">
            <input asp-for="AudioPath" type="text" placeholder="Аудиозапись">
            <input asp-for="Time" type="datetime-local" placeholder="Время" required>
            <button type="submit">Изменить</button>
        </form>
      
      
    </div>
  </div>
</body>
</html>